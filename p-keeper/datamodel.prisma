type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  secretCode: Int!
  experiences: [Experience!]! @relation(name: "ExperienceToUser", onDelete: CASCADE)
  cars: [Car!]! @relation(name: "CarToUser", onDelete: CASCADE)
  location: Location @relation(name: "LocationToUser", onDelete: CASCADE)
}


type Experience {
  id: ID! @id
  location: String! 
  state: String! 
  destination: String!
  time: String
  date: String!
  description: String!
  robbed: Boolean!
  items: String
  car: Car! @relation(name:"CarToExperience", onDelete: CASCADE)
  author: User! @relation(name: "ExperienceToUser", onDelete: SET_NULL)

}

type Car {
  id: ID! @id
  color: String
  plateNumber: String
  passengers: Int
  make: String
  description: String
  experience: Experience! @relation(link:INLINE, name:"CarToExperience")
  author: User! @relation(name: "CarToUser", onDelete: SET_NULL)
  
}

type Tip {
  id: ID! @id
  yourTip: String
  twitterHandle: String
}

type Location {
  id: ID! @id
  longitude: String
  latitude:  String
 author: User @relation(link:INLINE, name:"LocationToUser")
}